        "mini-css-extract-plugin": "^2.7.5",
        "prettier": "^2.8.8",
        "style-loader": "^3.3.2",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.4",
        "webpack": "^5.82.0",
